<form action="/request-help" method="POST" class="space-y-4">
  <label class="block">
    <span class="text-gray-700">Your Name</span>
    <input type="text" name="name" class="w-full p-3 border rounded-md" required>
  </label>

  <label class="block">
    <span class="text-gray-700">Your Email</span>
    <input type="email" name="email" class="w-full p-3 border rounded-md" required>
  </label>

  <label class="block">
    <span class="text-gray-700">Phone Number</span>
    <input type="text" name="phone" class="w-full p-3 border rounded-md">
  </label>

  <label class="block">
    <span class="text-gray-700">Describe your situation</span>
    <textarea name="message" rows="4" class="w-full p-3 border rounded-md" required></textarea>
  </label>

  <button type="submit" class="w-full bg-pink-500 text-white py-3 rounded-md font-bold hover:bg-pink-700 transition">
    Send Request
  </button>
</form>
