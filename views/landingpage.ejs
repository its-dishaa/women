  // Send Message
  sendBtn.onclick = () => {
    const userMsg = chatInput.value.trim();
    if(userMsg){
      chatContent.innerHTML += `<p><b>You:</b> ${userMsg}</p>`;
      chatInput.value = "";

      // Bot response (keyword matching)
      let reply = "üôè I'm not sure, but you can reach Women Helpline 181 for help.";
