  <style>
    /* Bubble container */
    .bubbles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: -1; /* keep behind content */
    }

    .bubbles span {
      position: absolute;
      display: block;
      width: 40px;
      height: 40px;
      background: rgba(236, 72, 153, 0.2); /* pinkish bubbles */
      border-radius: 50%;
      bottom: -100px;
      animation: rise 20s infinite;
    }

    /* Random bubble sizes and timings */
    .bubbles span:nth-child(1) { left: 10%; width: 80px; height: 80px; animation-duration: 15s; }
    .bubbles span:nth-child(2) { left: 20%; width: 20px; height: 20px; animation-duration: 15s; animation-delay: 2s; }
    .bubbles span:nth-child(3) { left: 35%; width: 60px; height: 60px; animation-duration: 10s; animation-delay: 2s; }
    .bubbles span:nth-child(4) { left: 50%; width: 40px; height: 40px; animation-duration: 18s; animation-delay: 2s; }
    .bubbles span:nth-child(5) { left: 70%; width: 50px; height: 50px; animation-duration: 20s; animation-delay: 3s; }
    .bubbles span:nth-child(6) { left: 80%; width: 25px; height: 25px; animation-duration: 12s; animation-delay: 2s; }
    .bubbles span:nth-child(7) { left: 90%; width: 100px; height: 100px; animation-duration: 12s; animation-delay: 2s; }
    .bubbles span:nth-child(8) { left: 90%; width: 100px; height: 100px; animation-duration: 18s; animation-delay: 2s; }
    .bubbles span:nth-child(9) { left: 20%; width: 100px; height: 100px; animation-duration: 19s; animation-delay: 2s; }
.bubbles span:nth-child(10) { left: 20%; width: 100px; height: 100px; animation-duration: 19s; animation-delay: 2s; }

    @keyframes rise {
      0% { transform: translateY(0) scale(1); opacity: 0.6; }
      100% { transform: translateY(-1200px) scale(1.5); opacity: 0; }
    }


      /* for emergency btn */
       @keyframes inOut {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); } /* 1.15 = zoom out a bit */
  }

  .animate-inout {
    animation: inOut 1.5s infinite ease-in-out;
  }
  </style>
