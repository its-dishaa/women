    /* Bubble container */
    .bubbles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: -1; 
    }

    .bubbles span {
      position: absolute;
      display: block;
      width: 40px;
      height: 40px;
