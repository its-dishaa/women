    <!-- Card Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% laws.forEach(law => { %>
  <a href="<%= law.link %>" target="_blank" rel="noopener noreferrer"
     class="block bg-white p-6 rounded-xl shadow-md border border-purple-100 
            transform transition duration-300 hover:scale-105 hover:shadow-2xl">
    <div class="text-purple-600 text-3xl mb-4">ðŸ“œ</div>
    <h3 class="text-xl font-bold text-pink-600"><%= law.title %></h3>
    <p class="mt-2 text-gray-700"><%= law.description %></p>
    <p class="mt-2 text-sm text-gray-500">Section: <%= law.section %></p>
    <span class="mt-3 inline-block text-xs bg-purple-200 text-purple-700 px-3 py-1 rounded">
      <%= law.category %>
    </span>
  </a>
<% }) %>

    </div>
  </main>
</body>
</html>

