<body class="bg-gradient-to-br from-pink-300 via-purple-300 to-pink-100 min-h-screen flex flex-col">



  <!-- Navbar -->
  <header class="flex justify-between items-center px-8 py-4 bg-white shadow-md">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 flex items-center justify-center rounded-full bg-pink-500 text-white">‚ù§Ô∏è</div>
      <h1 class="text-xl font-bold text-gray-800">SheRises</h1>
    </div>
    <nav class="flex space-x-6">
      <a href="/" class="text-pink-500 hover:text-pink-700 font-semibold">Home </a>
      <a href="/RightAndLaws" class="text-pink-500 hover:text-pink-700 font-semibold">Rights And Laws</a>
      <a href="/FirGuide" class="text-pink-500 hover:text-pink-700 font-semibold">FIR Guide</a>
      <a href="/FindHelp" class="text-pink-600 hover:text-pink-800 font-semibold">Find Help</a>
      <a href="/Blog" class="text-pink-600 hover:text-pink-800 font-semibold">Blogs</a>
      <a href="/chatbot" class="text-pink-600 font-semibold">Legal Assistant</a>
        </nav>
  </header>

  <!-- Chatbot Section -->
  <main class="flex flex-1 justify-center items-center px-4 py-10">
    <div class="w-full max-w-md bg-white rounded-xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="bg-pink-600 text-white px-4 py-3 font-semibold">üí¨ Legal Assistant</div>
      <!-- Chat Content -->
      <div id="chat-content" class="p-4 h-96 overflow-y-auto text-sm space-y-2">
        <p><b>Bot:</b> Hi üëã I am your AI legal assistant. Ask me about women‚Äôs rights and laws in India.</p>
      </div>
      <!-- Input -->
      <div class="flex border-t border-gray-200 p-2">
        <input id="chat-input" type="text" placeholder="Type your message..."
          class="flex-1 border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-500" />
        <button id="send-btn" class="ml-2 bg-pink-600 hover:bg-pink-700 text-white px-4 py-2 rounded-lg text-sm">Send</button>
      </div>
    </div>
  </main>

<script>
  const sendBtn = document.getElementById("send-btn");
  const chatContent = document.getElementById("chat-content");
  const chatInput = document.getElementById("chat-input");

  sendBtn.onclick = async () => {
    const userMsg = chatInput.value.trim();
    if (userMsg) {
      chatContent.innerHTML += `<p><b>You:</b> ${userMsg}</p>`;
      chatInput.value = "";

      try {
        const res = await fetch("/chatbot", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: userMsg })
        });

        const data = await res.json();
        chatContent.innerHTML += `<p><b>Bot:</b> ${data.reply}</p>`;
        chatContent.scrollTop = chatContent.scrollHeight;
      } catch (err) {
        chatContent.innerHTML += `<p><b>Bot:</b> ‚ö†Ô∏è Server error, please try again later.</p>`;
      }
    }
  };
</script>


</body>
